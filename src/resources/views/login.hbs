<div class="body">
    <div class="container-loginUI">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Log In To Continue</h3>
			</div>
			<div class="card-body">
				<form>
					<div class=" form-group">
						<label class="head-name" for="username">User Name</label>
						<input type="text" id="username" class="form-control" placeholder="username" required>
					</div>
					<div class=" form-group">
						<label class="head-name" for="password">Password</label>
						<input id="password" type="password" class="form-control" placeholder="password" required>
					</div>
					<div class="form-group d-flex justify-content-end">
						<a href="/login/forgotpassword">Forgot your password?</a>
					</div>
					<div class="form-group button">
						 <a href="/"  class="btn btn-primary btn-lg">Login</a>
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Don't have an account?<a href="/login/signup">Sign Up</a>
				</div>
				
			</div>
		</div>
	</div>
    </div>  
</div>
