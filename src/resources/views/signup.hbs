<div class="container-signupUI">
    <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Create Account</h3>
      </div>
      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="visitor_name" placeholder="Nguyen Van A" pattern=[A-Z\sa-z]{3,20} required>
          </div>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="visitor_email" placeholder="Van.A@email.com" required>
          </div>
        
          <hr>
          <div class="password">
          <div class="form-group w-50 mr4">
            <label for="password">Password</label>
            <input type="password" id="password" required>
        </div>
        <div class="form-group w-50 mr4">
            <label for="confirmPass">Confirm Password</label>
            <input type="password" id="confirm_password"  required>
         
          </div>
        
        </div>
          
          <hr>
         
          <div class="form-group">
            <input type="submit" value="Sign Up" class="btn button">
          </div>

          
        </form>
    </div>
    </div>
    </div>
</div>
 <script src="/scripts/signup.js" type="text/javascript"></script>
